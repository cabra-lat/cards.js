{
  "name": "@cabra-lat/cards-js",
  "version": "1.0.1",
  "description": "A card game library",
  "main": "src/cards.js",
  "scripts": {
    "start": "npm run build && npx http-server build",
    "build": "npm run docs && npm run copy-files",
    "docs": "jsdoc src --destination docs",
    "copy-files": "mkdir -p build && cp src/*.js html/*.html build/ && cp -r css svg img docs build/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cabra-lat/cards.js.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "keywords": [
    "cards",
    "game",
    "deck",
    "javascript"
  ],
  "author": "Cabra Lat.",
  "license": "MIT",
  "files": [
    "src/",
    "img/",
    "svg/",
    "css/",
    "html/"
  ],
  "devDependencies": {
    "jsdoc": "^4.0.4",
    "http-server": "^14.1.1"
  }
}
